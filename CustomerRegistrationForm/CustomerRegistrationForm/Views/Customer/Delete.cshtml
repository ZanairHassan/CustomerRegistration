@model CustomerRegistrationForm.Models.Customer

<h2>Delete Customer</h2>

<div>
    <h4>Are you sure you want to delete this customer?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.city_id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.city_id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Details)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Details)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dated)
        </dd>
    </dl>
    @using (Html.BeginForm("Delete", "Customer", new { id = Model.customer_id }, FormMethod.Post))
    {
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    }
</div>
