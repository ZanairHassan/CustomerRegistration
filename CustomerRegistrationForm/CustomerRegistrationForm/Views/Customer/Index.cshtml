@model IEnumerable<CustomerRegistrationForm.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<a asp-controller="Customer" asp-action="Create" class="btn btn-primary">Add Customer</a>

<h2>Customers</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>
            <th>
                @Html.ActionLink("City", "Index", new { sortOrder = ViewBag.CitySortParm })
            </th>
            <th>
                @Html.ActionLink("Gender", "Index", new { sortOrder = ViewBag.GenderSortParm })
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                <td>@Html.DisplayFor(modelItem => item.city_id)</td>
                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.customer_id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.customer_id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.customer_id" onclick="return confirm('Are you sure you want to delete this customer?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @if (ViewBag.CurrentPage > 1)
    {
        <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
    }

    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
    }
</div>